

<div class="wrapper">
<h1>Home</h1>
<% if current_user %>
  <%= render 'form' %>
<% end %>
<ul class="tweets">
<% @tweets.each do |tweet| %>
  <li class="tweet">
    <%# <%= link_to tweet_comments_path(tweet) do %>
      <%= tweet.body %>
      <%= tweet.user.name %>
      <span>@<%= tweet.user.username %></span>
    <%# <% end %>
      <% if current_user %>
        <div class='c'>
          <span><%= link_to edit_tweet_path(tweet) do%><%= image_tag('update.png') %><% end %></span>
          <span><%= link_to tweet_path(tweet), method: :delete, data: { confirm: "Are you sure you want to delete this tweet?" } do %> <%= image_tag('delete.png')%><% end %> </span>
        </div>
      <% end %>
  </li>
<% end %>
</ul>